<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background utama dengan garis putih lebih tipis -->
    <item>
        <shape>
            <solid android:color="#00FFFFFF"/>
            <corners android:radius="20dp"/>
            <stroke android:width="1dp" android:color="#40FFFFFF"/> <!-- Garis putih tipis -->
        </shape>
    </item>

    <!-- Radial Gradient -->
    <item>
        <shape>
            <corners android:radius="20dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.2"
                android:centerY="0.05"
                android:startColor="#29FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>

    <!-- Linear Gradient -->
    <item>
        <shape>
            <corners android:radius="20dp"/>
            <gradient
                android:angle="150"
                android:startColor="#1AD37BFF"
                android:endColor="#1C1B3333"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>
