<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tvNomorUnit"
        android:layout_height="wrap_content"
        android:text="PS-1"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/card_bg">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waktu Mulai"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/input_stroke"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/tvWaktuMulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:background="@drawable/card_bg"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waktu Selesai"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/input_stroke"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/tvWaktuSelesai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/card_bg"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipe Main"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingBottom="6dp"/>

            <Spinner
                android:id="@+id/spinnerTipeMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:popupBackground="@color/black"
                android:textColor="@android:color/white"/>


            <EditText
                android:id="@+id/etJumlahMenit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan jumlah menit"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@drawable/card_bg"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:visibility="gone"
                android:enabled="true"/>

            <Button
                android:id="@+id/btnMulaiPermainan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mulai Permainan"
                android:backgroundTint="#004d00"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnAkhiriPermainan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akhiri Permainan"
                android:backgroundTint="#b22222"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
