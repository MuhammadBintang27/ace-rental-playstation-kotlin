<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/card_bg">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Menunggu"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingBottom="6dp"/>
            <TextView
                android:id="@+id/tvNomorUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingBottom="6dp"/>

            <TextView
                android:id="@+id/tvWaktuMulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mulai: -"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tvWaktuSelesai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selesai: -"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipe Main"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingBottom="6dp"/>

            <Spinner
                android:id="@+id/spinnerTipeMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/etJumlahMenit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan jumlah menit"
                android:inputType="number"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:visibility="gone"
                android:enabled="true"/>

            <Button
                android:id="@+id/btnMulaiPermainan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mulai Permainan"
                android:backgroundTint="#004d00"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnAkhiriPermainan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akhiri Permainan"
                android:backgroundTint="#b22222"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
